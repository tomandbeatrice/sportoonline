# Application
APP_NAME=SportOnline
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_URL=https://sportoonline.com

# Database
DB_CONNECTION=mysql
DB_HOST=your-production-db-host
DB_PORT=3306
DB_DATABASE=sportoonline_prod
DB_USERNAME=your-db-username
DB_PASSWORD=your-db-password

# Cache & Session (Redis recommended for production)
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Redis
REDIS_HOST=your-redis-host
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
MAIL_MAILER=smtp
MAIL_HOST=smtp.example.com
MAIL_PORT=587
MAIL_USERNAME=your-email@example.com
MAIL_PASSWORD=your-email-password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS=noreply@sportoonline.com
MAIL_FROM_NAME="${APP_NAME}"

# Payment Gateways
# Iyzico
IYZICO_API_KEY=your-production-iyzico-api-key
IYZICO_SECRET_KEY=your-production-iyzico-secret-key
IYZICO_BASE_URL=https://api.iyzipay.com

# PayTR
PAYTR_MERCHANT_ID=your-paytr-merchant-id
PAYTR_MERCHANT_KEY=your-paytr-merchant-key
PAYTR_MERCHANT_SALT=your-paytr-merchant-salt
PAYTR_TEST_MODE=false

# Stripe
STRIPE_SECRET=your-production-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-production-stripe-publishable-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret
STRIPE_CURRENCY=try

# Google Cloud (Vision API for image search)
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
GOOGLE_CLOUD_KEY_FILE=/path/to/service-account-key.json

# Pusher (Real-time notifications)
PUSHER_APP_ID=your-pusher-app-id
PUSHER_APP_KEY=your-pusher-app-key
PUSHER_APP_SECRET=your-pusher-app-secret
PUSHER_APP_CLUSTER=eu

# AWS S3 (if using for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_DEFAULT_REGION=eu-central-1
AWS_BUCKET=sportoonline-production
AWS_USE_PATH_STYLE_ENDPOINT=false

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=error

# Security
SESSION_LIFETIME=120
SANCTUM_STATEFUL_DOMAINS=sportoonline.com,www.sportoonline.com

# Performance
OPTIMIZE_AUTOLOADER=true
FILESYSTEM_DISK=public

# Monitoring (optional - for Sentry, Bugsnag, etc.)
SENTRY_LARAVEL_DSN=
SENTRY_TRACES_SAMPLE_RATE=0.1

# Rate Limiting
THROTTLE_LIMIT=60
THROTTLE_DECAY_MINUTES=1
