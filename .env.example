APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database

# JWT Secret (used for token encryption - MUST be changed in production)
# Generate with: php artisan jwt:secret
JWT_SECRET=your_jwt_secret_key
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Cache Configuration
# Redis is recommended for production environments
# Options: file, redis, memcached, dynamodb, octane, array
CACHE_STORE=redis
CACHE_PREFIX=sportoonline_cache

# Cache TTL Settings (in seconds)
# Adjust based on data volatility
CACHE_PRODUCTS_TTL=3600        # 1 hour
CACHE_CATEGORIES_TTL=7200      # 2 hours
CACHE_CAMPAIGNS_TTL=900        # 15 minutes
CACHE_SELLERS_TTL=1800         # 30 minutes

# Cache Optimization
CACHE_ROUTES_ENABLED=true
CACHE_CONFIG_ENABLED=true
CACHE_VIEWS_ENABLED=true

MEMCACHED_HOST=127.0.0.1

# Redis Configuration
# Required when CACHE_STORE=redis or QUEUE_CONNECTION=redis
# For production, use a strong password
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0              # Default database
REDIS_CACHE_DB=1        # Separate database for cache

MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@sportoonline.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Payment Gateway Settings
# Configure payment providers for different regions and requirements

# Iyzico (Turkish payment gateway)
# Register at: https://www.iyzico.com/
IYZICO_API_KEY=your_api_key
IYZICO_SECRET_KEY=your_secret_key
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com  # Use https://api.iyzipay.com for production

# PayTR (Turkish payment gateway)
# Register at: https://www.paytr.com/
PAYTR_MERCHANT_ID=your_merchant_id
PAYTR_MERCHANT_KEY=your_merchant_key
PAYTR_MERCHANT_SALT=your_merchant_salt
PAYTR_TEST_MODE=true       # Set to false for production
PAYTR_CURRENCY=TL
PAYTR_LANGUAGE=tr

# Stripe (International payments)
# Register at: https://stripe.com/
STRIPE_PUBLIC_KEY=your_public_key
STRIPE_SECRET_KEY=your_secret_key
STRIPE_WEBHOOK_SECRET=your_webhook_secret

# Shipping / Kargo Settings
# Configure shipping providers and costs
SHIPPING_DEFAULT_PROVIDER=geliver
FREE_SHIPPING_THRESHOLD=500          # Free shipping above this amount (TL)
DEFAULT_SHIPPING_COST=29.90          # Default shipping cost (TL)
WEIGHT_BASED_PRICING=true            # Calculate shipping based on weight
AUTO_CREATE_SHIPMENT=false           # Automatically create shipment on order

# Geliver.io
GELIVER_API_KEY=your_geliver_api_key
GELIVER_ENABLED=true

# Aras Kargo
ARAS_KARGO_USERNAME=your_username
ARAS_KARGO_PASSWORD=your_password
ARAS_KARGO_CUSTOMER_CODE=your_customer_code
ARAS_ENABLED=true

# Sürat Kargo
SURAT_KARGO_USERNAME=your_username
SURAT_KARGO_PASSWORD=your_password
SURAT_KARGO_CUSTOMER_CODE=your_customer_code
SURAT_ENABLED=true

# PTT Kargo
PTT_KARGO_USERNAME=your_username
PTT_KARGO_PASSWORD=your_password
PTT_KARGO_CUSTOMER_CODE=your_customer_code
PTT_ENABLED=true

# Yurtiçi Kargo
YURTICI_KARGO_USERNAME=your_username
YURTICI_KARGO_PASSWORD=your_password
YURTICI_KARGO_CUSTOMER_CODE=your_customer_code
YURTICI_ENABLED=true

# ============================================
# Frontend (Vite) Environment Variables
# ============================================
VITE_API_URL=http://localhost:8000
VITE_API_BASE_PATH=/api

# Google Analytics (Optional)
# Get your tracking ID from: https://analytics.google.com/
VITE_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Pusher (WebSocket) - For real-time features
# Register at: https://pusher.com/
VITE_PUSHER_APP_KEY=your-pusher-key
VITE_PUSHER_HOST=localhost
VITE_PUSHER_PORT=6001

# Feature Flags (Development/Production toggles)
VITE_ENABLE_MOCK_AUTH=false          # Enable mock auth for frontend-only development
VITE_ENABLE_ANALYTICS=true           # Enable Google Analytics tracking
VITE_ENABLE_ERROR_TRACKING=true      # Enable error tracking and reporting
