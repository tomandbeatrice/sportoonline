APP_NAME=Laravel
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=laravel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database

JWT_SECRET=your_jwt_secret_key
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log
FILESYSTEM_DISK=local
QUEUE_CONNECTION=database

# Cache Configuration
CACHE_STORE=redis
CACHE_PREFIX=sportoonline_cache

# Cache TTL Settings (in seconds)
CACHE_PRODUCTS_TTL=3600
CACHE_CATEGORIES_TTL=7200
CACHE_CAMPAIGNS_TTL=900
CACHE_SELLERS_TTL=1800

# Cache Optimization
CACHE_ROUTES_ENABLED=true
CACHE_CONFIG_ENABLED=true
CACHE_VIEWS_ENABLED=true

MEMCACHED_HOST=127.0.0.1

# Redis Configuration
REDIS_CLIENT=phpredis
REDIS_HOST=redis
REDIS_PASSWORD=null
REDIS_PORT=6379
REDIS_DB=0
REDIS_CACHE_DB=1

MAIL_MAILER=smtp
MAIL_SCHEME=null
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password
MAIL_ENCRYPTION=tls
MAIL_FROM_ADDRESS="noreply@sportoonline.com"
MAIL_FROM_NAME="${APP_NAME}"

AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

VITE_APP_NAME="${APP_NAME}"

# Payment Gateway Settings
# Iyzico
IYZICO_API_KEY=your_api_key
IYZICO_SECRET_KEY=your_secret_key
IYZICO_BASE_URL=https://sandbox-api.iyzipay.com

# PayTR
PAYTR_MERCHANT_ID=your_merchant_id
PAYTR_MERCHANT_KEY=your_merchant_key
PAYTR_MERCHANT_SALT=your_merchant_salt
PAYTR_TEST_MODE=true
PAYTR_CURRENCY=TL
PAYTR_LANGUAGE=tr

# Stripe
STRIPE_PUBLIC_KEY=your_public_key
STRIPE_SECRET_KEY=your_secret_key
STRIPE_WEBHOOK_SECRET=your_webhook_secret

# Shipping / Kargo Settings
SHIPPING_DEFAULT_PROVIDER=geliver
FREE_SHIPPING_THRESHOLD=500
DEFAULT_SHIPPING_COST=29.90
WEIGHT_BASED_PRICING=true
AUTO_CREATE_SHIPMENT=false

# Geliver.io
GELIVER_API_KEY=your_geliver_api_key
GELIVER_ENABLED=true

# Aras Kargo
ARAS_KARGO_USERNAME=your_username
ARAS_KARGO_PASSWORD=your_password
ARAS_KARGO_CUSTOMER_CODE=your_customer_code
ARAS_ENABLED=true

# Sürat Kargo
SURAT_KARGO_USERNAME=your_username
SURAT_KARGO_PASSWORD=your_password
SURAT_KARGO_CUSTOMER_CODE=your_customer_code
SURAT_ENABLED=true

# PTT Kargo
PTT_KARGO_USERNAME=your_username
PTT_KARGO_PASSWORD=your_password
PTT_KARGO_CUSTOMER_CODE=your_customer_code
PTT_ENABLED=true

# Yurtiçi Kargo
YURTICI_KARGO_USERNAME=your_username
YURTICI_KARGO_PASSWORD=your_password
YURTICI_KARGO_CUSTOMER_CODE=your_customer_code
YURTICI_ENABLED=true
