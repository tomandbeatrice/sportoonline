public function joinDiscountCampaign(Request $request, $sellerId)
{
    $campaignCode = $request->input('code');
    $discountRate = $request->input('discount'); // örn: %15
    $commissionDrop = 3; // örn: %3 düşüş

    // Katılım logu
    DiscountCampaignLog::create([
        'seller_id' => $sellerId,
        'campaign_code' => $campaignCode,
        'discount_rate' => $discountRate,
        'joined_at' => now()
    ]);

    // Komisyon güncellemesi
    Seller::where('id', $sellerId)->update([
        'commission_rate' => DB::raw("commission_rate - {$commissionDrop}")
    ]);

    return response()->json([
        'message' => "Kampanyaya katıldınız. Komisyon oranınız %{$commissionDrop} düşürüldü.",
        'campaign' => $campaignCode,
        'newCommissionRate' => Seller::find($sellerId)->commission_rate
    ]);
}